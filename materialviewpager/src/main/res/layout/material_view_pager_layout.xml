        <FrameLayout
            android:id="@+id/pagerTitleStripContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="140dp"
            android:fitsSystemWindows="true"
            tools:background="#3FFF" />



    </RelativeLayout>

</RelativeLayout>
